<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <!--自动装配（更加的简便，不用再写property节点）-->

    <!--方式1：根据属性的名字自动装配注入:写autowire=""-->
    <!--带有autowire节点的<bean>会自动去IOC容器中查找与该<bean>中的class需要的属性同名的对象-->
    <!--<bean id="userDao" class="train.myspring.s4autoassembly.UserDao"></bean>-->
    <!--<bean id="userService" class="train.myspring.s4autoassembly.UserService" autowire="byName"></bean>-->
    <!--<bean id="userAction" class="train.myspring.s4autoassembly.UserAction" autowire="byName"></bean>-->
    <!--也可以定义到全局， 这样就不用每个bean节点都去写autowire=”byName” 而是将其default-autowire="byName"写在<beans>中 -->

    <!--方式2：根据类型自动装配：autowire="byType"-->
    <!--前提: 必须确保该类型在IOC容器中只有一个对象；否则报错。-->
    <!-- ###############根据类型进行自动装配############### -->
    <!--<bean id="userAction" class="org.springframework.train.context.insight.s4autoassembly.UserAction" autowire="byName"/>-->
    <!--<bean id="userService" class="org.springframework.train.context.insight.s4autoassembly.UserService" autowire="byType"/>-->
    <bean id="userDao" class="org.springframework.train.context.insight.s4autoassembly.UserDao" autowire="byType"
          destroy-method="killDao"/>
    <!-- 根据类型自动装配时：必须确保IOC容器中只有一个该类型的对象，例如下面又有一个Service就会报错 -->
    <!--<bean id="userService2" class="train.myspring.s4autoassembly.UserService"></bean>-->

    <bean id="user-1" class="org.springframework.train.context.insight.s4autoassembly.User">
        <property name="id" value="10"/>
        <property name="name" value="yananz"/>
    </bean>

    <bean id="user-2" class="org.springframework.train.context.insight.s4autoassembly.User">
        <property name="id" value="20"/>
        <property name="name" value="sanfengz"/>
    </bean>

</beans>